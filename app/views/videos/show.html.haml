%article.video
  .container
    .row
      .video_large_cover.span7.offset1
        %img(src="/tmp/monk_large.jpg")
      .video_info.span3
        %header
          %h3= @video.title
          %span Rating: #{@video.average_rating}/5.0
        %p= @video.description
        .actions
          %a.btn.btn-primary(href="") Watch Now
          = add_queue_btn(@video)

%section.reviews.container
  .row
    .span10.offset1
      = form_for([@video, Review.new]) do |f|
        %fieldset
          %label Rate this video
          = f.select :rating, options_for_video_reviews
          %label Write Review
          = f.text_area(:content, rows: 6, class: 'span6')
        %fieldset.actions.clearfix
          %input(type="submit" value="Submit" class="btn")
          = link_to "Cancel", video_path(@video)
      %header
        %h3 User Reviews (#{@reviews.count})
      %ul
        - @reviews.each do |review|
          %article.review
            %li.row
              .span2
                %span Rating: #{review.rating} / 5
                %p by <a href="">#{review.user.full_name}</a>
              .span8
                %p #{review.content}
