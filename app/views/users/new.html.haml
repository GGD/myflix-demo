%section.register.container
  .row
    .span10.offset1
      = bootstrap_form_for(@user, html: { class: 'form-horizontal' }) do |f|
        %header
          %h1 Register
        = f.alert_message "Please check your input below."
        %fieldset
          = f.email_field :email, label: 'Email Address', class: 'span3'
          = f.password_field :password, label: 'Password', class: 'span3'
          = f.text_field :full_name, label: 'Full Name', class: 'span3'
          = hidden_field_tag :invitation_token, @invitation_token
        %fieldset.actions.control-group
          .controls
            <script src="https://checkout.stripe.com/v2/checkout.js" class="stripe-button" data-key='#{ENV['STRIPE_PUBLISHABLE_KEY']}' data-amount="999" data-name="Myflix Sign Up Charge" data-description="$9.99 to sign up for the best video service!" data-currency="usd"> </script>
